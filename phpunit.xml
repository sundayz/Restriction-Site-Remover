<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="./vendor/autoload.php">
    <filter>
        <whitelist>
            <directory suffix=".php">./src/rsr</directory>
            <exclude>
                <directory>./public</directory>
                <directory>./vendor</directory>
                <directory>./test</directory>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="RSR">
            <directory>./test</directory>
        </testsuite>
    </testsuites>
</phpunit>
